<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:id="@+id/scrollview_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
                android:id="@+id/left_column"
                style="@style/VerticalColumn">

            <ImageView
                    android:contentDescription="@string/abstract_expressionism"
                    android:id="@+id/left_column_image_view"
                    android:src="@drawable/abstract_abstract_expressionism_art_2505693"
                    style="@style/ImageFormat"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/right_column"
                style="@style/VerticalColumn">

            <ImageView
                    android:contentDescription="@string/breathtaking_canada_day"
                    android:id="@+id/right_column_image_view"
                    android:src="@drawable/beautiful_breathtaking_canada_day_2526105"
                    style="@style/ImageFormat"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>